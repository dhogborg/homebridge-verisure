{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "target": "es5",
    "lib": ["es2016", "dom"],

    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strict": true,

    "outDir": "./build"
  },

  "include": ["./src/**/*"]
}
